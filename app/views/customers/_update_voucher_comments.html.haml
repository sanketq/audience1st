- if @gAdminDisplay
  %td.admin
    - gid = group.group_id
    - svid = "save_#{gid}"
    = form_tag update_comment_customer_voucher_path(@customer,group.vouchers[0]), :method => 'put', 'data-remote' => true, :class => 'save_comment' do
      = hidden_field_tag 'voucher_ids', group.voucherlist
      = text_field_tag 'comments', multiple_voucher_comments(group.vouchers), :id => "comments_#{gid}"
      = submit_tag 'Save', :id => svid, 'data-disable-with' => 'Wait...'
